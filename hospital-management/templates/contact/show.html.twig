{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container container-margin-top">
        <h1>Contact</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ contact.subject }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('contact_index') }}" class="btn btn-primary">back to list</a>

        <a href="{{ path('contact_edit', {'id': contact.id}) }}" class="btn btn-secondary">edit</a>

        {{ include('contact/_delete_form.html.twig') }}
    </div>
{% endblock %}
